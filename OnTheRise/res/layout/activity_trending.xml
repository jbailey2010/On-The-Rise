<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D6D6D6"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/trending_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_btn_black" >

        <Button
            android:id="@+id/filter_day"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/menu_btn_black"
            android:text="Last Day"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/filter_week"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/menu_btn_black"
            android:text="Last Week"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/filter_month"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/menu_btn_black"
            android:text="Last month"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/filter_all"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/menu_btn_black"
            android:text="No Filter"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <RelativeLayout
        android:layout_above="@+id/trending_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/trending_list_base"
        android:background="#444444" >

        <ListView
            android:id="@+id/listview_trending"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:clickable="true"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>